<div class="container mx-auto px-4 py-12 space-y-12">
    <h1 class="text-4xl font-bold text-center mb-4">Component Showcase</h1>
    <p class="text-center text-base-content/70 max-w-2xl mx-auto">
        All embedded components that ship with FluidHtmx.
        Use <code class="kbd kbd-sm">{% raw %}{% render 'components/name' %}{% endraw %}</code> in your templates.
    </p>

    <div class="divider">Alert</div>
    <section>
        <h2 class="text-2xl font-semibold mb-4">Alert</h2>
        <p class="mb-4 text-base-content/70">Displays contextual feedback messages. Parameters: <code>type</code>, <code>message</code>.</p>
        <div class="space-y-3">
            {% render 'components/alert', type: 'info', message: 'This is an informational alert.' %}
            {% render 'components/alert', type: 'success', message: 'Operation completed successfully!' %}
            {% render 'components/alert', type: 'warning', message: 'Please check your input.' %}
            {% render 'components/alert', type: 'error', message: 'Something went wrong.' %}
        </div>
    </section>

    <div class="divider">Badge</div>

    <section>
        <h2 class="text-2xl font-semibold mb-4">Badge</h2>
        <p class="mb-4 text-base-content/70">Inline status indicators. Parameters: <code>text</code>, <code>type</code>, <code>outline</code>, <code>size</code>.</p>
        <div class="flex flex-wrap gap-3 items-center">
            {% render 'components/badge', text: 'Default', type: 'primary' %}
            {% render 'components/badge', text: 'Secondary', type: 'secondary' %}
            {% render 'components/badge', text: 'Accent', type: 'accent' %}
            {% render 'components/badge', text: 'Info', type: 'info' %}
            {% render 'components/badge', text: 'Success', type: 'success' %}
            {% render 'components/badge', text: 'Warning', type: 'warning' %}
            {% render 'components/badge', text: 'Error', type: 'error' %}
        </div>
        <div class="flex flex-wrap gap-3 items-center mt-4">
            {% render 'components/badge', text: 'Outline', type: 'primary', outline: true %}
            {% render 'components/badge', text: 'Large', type: 'secondary', size: 'lg' %}
            {% render 'components/badge', text: 'Small', type: 'accent', size: 'sm' %}
            {% render 'components/badge', text: 'Tiny', type: 'info', size: 'xs' %}
        </div>
    </section>

    <div class="divider">Breadcrumb</div>

    <section>
        <h2 class="text-2xl font-semibold mb-4">Breadcrumb</h2>
        <p class="mb-4 text-base-content/70">Navigation breadcrumbs. Parameters: <code>items</code> (array of <code>{label, url}</code>).</p>
        {% render 'components/breadcrumb', items: breadcrumb_items %}
    </section>

    <div class="divider">Dropdown</div>

    <section>
        <h2 class="text-2xl font-semibold mb-4">Dropdown</h2>
        <p class="mb-4 text-base-content/70">Dropdown menu. Parameters: <code>label</code>, <code>items</code>, <code>align</code>.</p>
        <div class="flex gap-4">
            {% render 'components/dropdown', label: 'Actions', items: dropdown_items, align: 'start' %}
        </div>
    </section>

    <div class="divider">Table</div>

    <section>
        <h2 class="text-2xl font-semibold mb-4">Table</h2>
        <p class="mb-4 text-base-content/70">Data table. Parameters: <code>headers</code>, <code>rows</code>, <code>striped</code>, <code>hoverable</code>.</p>
        {% render 'components/table', headers: table_headers, rows: table_rows, striped: true, hoverable: true %}
    </section>

    <div class="divider">Pagination</div>

    <section>
        <h2 class="text-2xl font-semibold mb-4">Pagination</h2>
        <p class="mb-4 text-base-content/70">Page navigation with HTMX support. Parameters: <code>current_page</code>, <code>total_pages</code>, <code>base_url</code>, <code>target</code>.</p>
        <div class="flex justify-center">
            {% render 'components/pagination', current_page: 3, total_pages: 7, base_url: '/components', target: '#main-content' %}
        </div>
    </section>

    <div class="divider">Empty State</div>

    <section>
        <h2 class="text-2xl font-semibold mb-4">Empty State</h2>
        <p class="mb-4 text-base-content/70">Placeholder for empty content. Parameters: <code>title</code>, <code>message</code>, <code>action_label</code>, <code>action_url</code>.</p>
        <div class="bg-base-100 rounded-box p-4 shadow-sm">
            {% render 'components/empty-state', title: 'No results found', message: 'Try adjusting your search or filters to find what you are looking for.', action_label: 'Clear filters', action_url: '/components' %}
        </div>
    </section>

    <div class="divider">Toast</div>

    <section>
        <h2 class="text-2xl font-semibold mb-4">Toast</h2>
        <p class="mb-4 text-base-content/70">Notification toasts. Parameters: <code>message</code>, <code>type</code>, <code>dismissible</code>, <code>duration</code>.</p>
        <p class="mb-2 text-sm text-base-content/50">Click the button to show a toast notification.</p>
        <button class="btn btn-primary"
                hx-get="/partials/toast-demo"
                hx-target="#toast-container"
                hx-swap="innerHTML">
            Show Toast
        </button>
        <button class="btn btn-error"
                hx-get="/partials/toast-demo-2"
                hx-target="#toast-container"
                hx-swap="innerHTML">    
            Error Toast
        </button>
        <div id="toast-container"></div>
    </section>

    <div class="divider">Confirm Dialog</div>

    <section>
        <h2 class="text-2xl font-semibold mb-4">Confirm Dialog</h2>
        <p class="mb-4 text-base-content/70">Native <code>&lt;dialog&gt;</code> for confirmations. Parameters: <code>id</code>, <code>title</code>, <code>message</code>, <code>confirm_url</code>, <code>confirm_method</code>.</p>
        <button class="btn btn-error btn-outline" onclick="document.getElementById('demo-confirm').showModal()">
            Delete Item
        </button>
        {% render 'components/confirm-dialog', id: 'demo-confirm', title: 'Delete this item?', message: 'This action cannot be undone. The item will be permanently removed.', confirm_url: '/demo/delete', confirm_method: 'delete', confirm_label: 'Delete', cancel_label: 'Keep it' %}
    </section>

    <div class="divider">Modal</div>

    <section>
        <h2 class="text-2xl font-semibold mb-4">Modal</h2>
        <p class="mb-4 text-base-content/70">HTMX-loaded modal. Parameters: <code>id</code>, <code>title</code>, <code>url</code>, <code>trigger_label</code>, <code>trigger_class</code>, <code>size</code>.</p>
        <div class="flex gap-4">
            {% render 'components/modal', id: 'demo-modal-sm', title: 'Small Modal', url: '/partials/modal-demo', trigger_label: 'Small Modal', trigger_class: 'btn btn-outline', size: 'sm' %}
            {% render 'components/modal', id: 'demo-modal-md', title: 'Medium Modal', url: '/partials/modal-demo', trigger_label: 'Medium Modal', trigger_class: 'btn btn-primary' %}
            {% render 'components/modal', id: 'demo-modal-lg', title: 'Large Modal', url: '/partials/modal-demo', trigger_label: 'Large Modal', trigger_class: 'btn btn-secondary', size: 'lg' %}
        </div>
    </section>
</div>
