{% assign btn_class = trigger_class | default: 'btn' %}
{% assign modal_size = size | default: 'md' %}
<button class="{{ btn_class }}" onclick="document.getElementById('{{ id }}').showModal()">
  {{ trigger_label }}
</button>
<dialog id="{{ id }}" class="modal">
  <div class="modal-box{% if modal_size == 'lg' %} max-w-5xl{% elsif modal_size == 'sm' %} max-w-sm{% endif %}">
    {% if title %}
    <h3 class="text-lg font-bold">{{ title }}</h3>
    {% endif %}
    <div hx-get="{{ url }}" hx-trigger="intersect once" hx-swap="innerHTML">
      <span class="loading loading-spinner loading-md"></span>
    </div>
    <div class="modal-action">
      <form method="dialog">
        <button class="btn">Close</button>
      </form>
    </div>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
